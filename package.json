{
  "name": "prisma-entity-framework",
  "version": "1.0.2",
  "description": "TypeScript Entity Framework for Prisma ORM with Active Record pattern, fluent query builder, relation graphs, batch operations, advanced CRUD, search filters, and pagination utilities.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:integration": "jest integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:mysql": "powershell -ExecutionPolicy Bypass -File ./scripts/test-database.ps1 -Database mysql",
    "test:postgresql": "powershell -ExecutionPolicy Bypass -File ./scripts/test-database.ps1 -Database postgresql",
    "test:mongodb": "powershell -ExecutionPolicy Bypass -File ./scripts/test-database.ps1 -Database mongodb",
    "test:sqlite": "powershell -ExecutionPolicy Bypass -File ./scripts/test-database.ps1 -Database sqlite",
    "test:all-databases": "powershell -ExecutionPolicy Bypass -File ./scripts/test-all-databases.ps1",
    "prisma:test": "prisma generate --schema=tests/prisma/schema.test.prisma",
    "prisma:test:push": "prisma db push --schema=tests/prisma/schema.test.prisma",
    "prisma:mysql": "prisma generate --schema=tests/prisma/schema.mysql.prisma && prisma db push --schema=tests/prisma/schema.mysql.prisma --skip-generate",
    "prisma:postgresql": "prisma generate --schema=tests/prisma/schema.postgresql.prisma && prisma db push --schema=tests/prisma/schema.postgresql.prisma --skip-generate",
    "prisma:mongodb": "prisma generate --schema=tests/prisma/schema.mongodb.prisma && prisma db push --schema=tests/prisma/schema.mongodb.prisma --skip-generate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v"
  },
  "keywords": [
    "prisma",
    "entity",
    "framework",
    "orm",
    "active-record",
    "query-builder",
    "graph",
    "relations",
    "batch",
    "typescript",
    "database",
    "crud",
    "search",
    "filter",
    "pagination"
  ],
  "contributors": [
    "Eduardo Estrada <me@e2rd0.com> (https://e2rd0.com)",
    "Hector Arrechea <hector.arrechea@ct.uneatlantico.es>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/didactika/prisma-entity-framework.git"
  },
  "bugs": {
    "url": "https://github.com/didactika/prisma-entity-framework/issues"
  },
  "homepage": "https://github.com/didactika/prisma-entity-framework#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.2.0",
    "prisma": "^6.16.3",
    "ts-jest": "^29.4.4",
    "tsup": "^8.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "@prisma/client": ">=6.0.0"
  }
}